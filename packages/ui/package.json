{
  "name": "plazer-ui",
  "scripts": {
    "dev": "solid-start dev",
    "build": "pnpm run codegen && pnpm run build:server && pnpm run build:client",
    "build:server": "solid-start build && mkdir -p build && rm -rf build/server && mv dist build/server",
    "build:client": "START_SSR=false solid-start build && mkdir -p build && rm -rf build/client && mv dist build/client",
    "lint": "tsc && eslint --ext .ts,.tsx src && prettier --check .",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "start": "solid-start start",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist build",
    "postinstall": "node scripts/dependency-fix.js",
    "codegen": "pnpm run codegen:scss && pnpm run codegen:gql",
    "codegen:scss": "typed-scss-modules --nameFormat none --exportType default src --ignore '**/index.scss' --outputFolder src/__generated__/scss --aliasPrefixes.~ 'src'",
    "codegen:scss:watch": "pnpm run codegen:scss --watch",
    "codegen:gql": "graphql-codegen --config .graphqlrc.yml",
    "codegen:gql:watch": "pnpm run codegen:gql --watch"
  },
  "type": "module",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@parcel/watcher": "^2.3.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@solidjs/meta": "^0.28.6",
    "@solidjs/router": "^0.8.3",
    "@solidjs/testing-library": "^0.8.4",
    "@testing-library/jest-dom": "^6.1.3",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "babel-plugin-graphql-tag": "^3.3.0",
    "eslint-config-custom": "workspace:*",
    "jsdom": "^22.1.0",
    "sass": "^1.66.1",
    "solid-js": "^1.7.11",
    "solid-start": "^0.3.5",
    "solid-start-node": "^0.3.5",
    "solid-start-static": "^0.3.5",
    "tsconfig": "workspace:*",
    "typed-scss-modules": "^7.1.4",
    "typescript": "~5.2.2",
    "undici": "^5.24.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "@merged/solid-apollo": "^1.7.1",
    "graphql": "^16.8.0",
    "graphql-ws": "^5.14.0",
    "jwt-decode": "^3.1.2",
    "modern-normalize": "^2.0.0",
    "solidjs-use": "^2.3.0"
  }
}
