{
  "name": "plazer-ui",
  "scripts": {
    "dev": "solid-start dev",
    "build": "pnpm run codegen && pnpm run build:server && pnpm run build:client",
    "build:server": "solid-start build && mkdir -p build && rm -rf build/server && mv dist build/server",
    "build:client": "START_SSR=false solid-start build && mkdir -p build && rm -rf build/client && mv dist build/client",
    "lint": "tsc && eslint --ext .ts,.tsx src && prettier --check .",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "start": "solid-start start",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist build",
    "postinstall": "node scripts/dependency-fix.js",
    "codegen": "pnpm run codegen:scss && pnpm run codegen:gql",
    "codegen:scss": "typed-scss-modules --nameFormat none --exportType default src --ignore '**/index.scss' --outputFolder src/__generated__/scss",
    "codegen:scss:watch": "pnpm run codegen:scss --watch",
    "codegen:gql": "graphql-codegen --config .graphqlrc.yml",
    "codegen:gql:watch": "pnpm run codegen:gql --watch"
  },
  "type": "module",
  "devDependencies": {
    "@graphql-codegen/cli": "3.3.0",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "3.0.3",
    "@graphql-codegen/typescript-operations": "^3.0.3",
    "@rollup/plugin-babel": "^6.0.3",
    "@solidjs/meta": "^0.28.4",
    "@solidjs/router": "^0.8.2",
    "@solidjs/testing-library": "^0.7.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitest/coverage-c8": "^0.29.8",
    "@vitest/ui": "^0.29.8",
    "babel-plugin-graphql-tag": "^3.3.0",
    "eslint-config-custom": "workspace:*",
    "jsdom": "^21.1.1",
    "sass": "^1.60.0",
    "solid-js": "^1.7.2",
    "solid-start": "^0.2.26",
    "solid-start-node": "^0.2.26",
    "solid-start-static": "^0.2.26",
    "tsconfig": "workspace:*",
    "typescript": "^5.0.3",
    "typed-scss-modules": "^7.1.0",
    "undici": "^5.21.0",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  },
  "dependencies": {
    "@apollo/client": "^3.7.11",
    "@mbarzda/solid-i18next": "^1.2.2",
    "@merged/solid-apollo": "^1.7.1",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.12.1",
    "html-parse-string": "^0.0.9",
    "i18next": "^22.5.0",
    "modern-normalize": "^1.1.0",
    "solidjs-use": "^2.1.0"
  }
}
