{
  "extends": "tsconfig/tsconfig.json",
  "compilerOptions": {
    "jsxImportSource": "solid-js",
    "jsx": "preserve",

    "types": ["solid-start/env", "@testing-library/jest-dom"],
    "baseUrl": "./",
    "rootDirs": ["./src", "./src/__generated__/scss/src"],
    "paths": {
      "~gen/*": ["./src/__generated__/*"],
      "~/*": ["./src/*"]
    },

    "noEmit": true
  },
  "types": ["vitest"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"]
}
