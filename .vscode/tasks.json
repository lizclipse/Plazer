{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build - cli",
      "type": "cargo",
      "command": "build",
      "problemMatcher": "$rustc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build - ui",
      "type": "process",
      "command": "turbo",
      "args": ["build"],
      "problemMatcher": "$rustc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "test - cli",
      "type": "process",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": "$rustc",
      "isTestCommand": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "lint:fix - cli",
      "type": "process",
      "command": "cargo",
      "args": ["clippy", "--fix", "--allow-staged"],
      "problemMatcher": "$rustc",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "lint:fix - ui",
      "type": "process",
      "command": "turbo",
      "args": ["lint:fix"],
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "lint:fix - prettier",
      "type": "process",
      "command": "pnpm",
      "args": ["run", "lint:fix"],
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "lint:fix - all",
      "dependsOn": ["lint:fix - cli", "lint:fix - ui", "lint:fix - prettier"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "serve - service",
      "type": "process",
      "command": "cargo",
      "args": ["run", "-p", "c11ity_service"],
      "problemMatcher": "$rustc",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "serve - cli",
      "type": "process",
      "command": "cargo",
      "args": ["watch", "-x", "run -p c11ity", "-w", "crates"],
      "problemMatcher": [
        {
          "base": "$rustc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*Compiling\\s.*$",
            "endsPattern": "^\\s*Finished\\s.*$"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "serve - ui",
      "type": "process",
      "command": "pnpm",
      "args": ["run", "--filter", "{packages/ui}", "dev"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "generate schema - cli",
      "type": "process",
      "command": "cargo",
      "args": ["run", "-p", "c11ity", "--", "schema", "--output", "schema.gql"],
      "problemMatcher": "$rustc",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "generate schema",
      "dependsOn": ["generate schema - cli", "lint:fix - prettier"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "codegen",
      "type": "process",
      "command": "turbo",
      "args": ["codegen"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "codegen - watch",
      "type": "process",
      "command": "turbo",
      "args": ["codegen:watch"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
