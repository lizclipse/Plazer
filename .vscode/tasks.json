        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "test - cli",
      // Use a type of process so we can set as test command
      "type": "process",
      "command": "cargo",
      "args": ["make", "test-cli"],
      "problemMatcher": "$rustc",
      "isTestCommand": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
