{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "command": "cargo",
      "args": ["run", "--bin", "c11ity", "--", "${input:args}"],
      "label": "cargo: run",
      "problemMatcher": "$rustc",
      "isBackground": true
    },
    {
      "type": "process",
      "command": "cargo",
      "args": [
        "watch",
        "---ignore",
        ".vscode/**",
        "--ignore",
        "dist/**",
        "--ignore",
        "target/**",
        "--exec",
        "run --bin c11ity -- ${input:args}"
      ],
      "label": "cargo: serve",
      "problemMatcher": "$rustc",
      "isBackground": true
    },
    {
      "type": "process",
      "command": "cargo",
      "args": ["build"],
      "group": "build",
      "label": "cargo: build",
      "problemMatcher": "$rustc",
      "dependsOn": ["trunk: build"]
    },
    {
      "type": "process",
      "command": "cargo",
      "args": ["test"],
      "group": "test",
      "label": "cargo: test",
      "problemMatcher": "$rustc"
    },
    {
      "type": "process",
      "command": "cargo",
      "args": ["clean"],
      "label": "cargo: clean",
      "problemMatcher": "$rustc"
    },
    {
      "type": "process",
      "command": "cargo",
      "args": ["fmt"],
      "label": "cargo: fmt",
      "problemMatcher": "$rustc"
    },
    {
      "type": "process",
      "command": "trunk",
      "args": ["build"],
      "group": "build",
      "label": "trunk: build",
      "problemMatcher": "$rustc"
    },
    {
      "type": "process",
      "command": "trunk",
      "args": ["clean"],
      "label": "trunk: clean",
      "problemMatcher": []
    },
    {
      "type": "process",
      "command": "trunk",
      "args": [
        "serve",
        "--watch",
        "${workspaceFolder}/crates/ui",
        "--watch",
        "${workspaceFolder}/crates/client",
        "--watch",
        "${workspaceFolder}/crates/common"
      ],
      "label": "trunk: serve",
      "problemMatcher": "$rustc",
      "isBackground": true
    }
  ],
  "inputs": [
    {
      "id": "crate",
      "type": "pickString",
      "description": "Select project run",
      "options": ["cli", "ui"]
    },
    {
      "id": "args",
      "type": "promptString",
      "description": "Give args to include"
    }
  ]
}
