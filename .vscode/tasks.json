      "type": "cargo",
      "command": "make",
      "args": ["serve-service"],
      "problemMatcher": [
        {
          "base": "$rustc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*Compiling\\s.*$",
            "endsPattern": "^\\s*Finished\\s.*$"
