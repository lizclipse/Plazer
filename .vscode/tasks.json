{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build - cli",
      "type": "cargo",
      "command": "make",
      "args": ["build-cli"],
      "problemMatcher": "$rustc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build - ui",
      "type": "cargo",
      "command": "make",
      "args": ["build-ui"],
      "problemMatcher": "$tsc",
