{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build - cli",
      "type": "process",
      "command": "cargo",
      "args": ["build"],
      "problemMatcher": "$rustc"
    },
    {
      "label": "build - ui",
      "type": "process",
      "command": "turbo",
      "args": ["build"],
      "problemMatcher": "$rustc"
    },
    {
      "label": "fix - cli",
      "type": "process",
      "command": "cargo",
      "args": ["clippy", "--fix", "--allow-staged"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "fix - ui",
      "type": "process",
      "command": "turbo",
      "args": ["fix"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "serve - cli",
      "type": "process",
      "command": "cargo",
      "args": ["run", "-p", "c11ity"],
      "problemMatcher": "$rustc",
      "isBackground": true
    },
    {
      "label": "serve - ui",
      "type": "process",
      "command": "turbo",
      "args": ["dev"],
      "problemMatcher": "$tsc",
      "isBackground": true
    },
    {
      "label": "generate schema",
      "type": "process",
      "command": "cargo",
      "args": ["run", "-p", "c11ity", "--", "schema", "--output", "schema.gql"],
      "problemMatcher": "$rustc"
    },
    {
      "label": "codegen",
      "type": "process",
      "command": "turbo",
      "args": ["codegen"],
      "problemMatcher": []
    },
    {
      "label": "codegen - watch",
      "type": "process",
      "command": "turbo",
      "args": ["codegen:watch"],
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}
